<div class="d-flex justify-content-center">
  <h1>検索結果</h1>
</div>
<div class="container">
  <div class="row">
    <% if @range == "User" %>
      <% @users.each do |user| %>
        <% unless user.guest_user? %>
          <%= link_to user_path(user.id) do %>
            <%= image_tag user.get_profile_image(100, 100), class: "mt-3 rounded-circle"; %>
            <h6><%= user.name %></h6>
          <% end %>
        <% end %>
      <% end %>
    <% elsif @range == "Work" %>
      <% @works.each do |work| %>
        <div class="col-lg-2">
          <%= link_to work_path(work.id) do %>
            <p>タイトル：<%= work.title %></p>
          <% end %>
          <%= link_to user_path(work.user.id) do  %>
            <p><%= image_tag work.user.get_profile_image(50, 50), class: "mt-3 rounded-circle"; %><%= work.user.name %></p>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <% @tags.each do |tag| %>
        <%= link_to tag.tag_name, tag_path(tag) %>
      <% end %>
    <% end %>
  </div>
</div>