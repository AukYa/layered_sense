<div class="d-flex justify-content-center">
  <h1>「<%= @tag.tag_name %>」の一覧</h1>
</div>
<div class="container">
  <div class="row">
    <% @works.each do |work| %>
    <div class="col-lg-2">
      <%= link_to work_path(work.id) do %>
        <p>タイトル：<%= work.title %></p>
      <% end %>
      <%= link_to user_path(work.user.id) do  %>
        <p><%= image_tag work.user.get_profile_image(50, 50), class: "mt-3 rounded-circle"; %><%= work.user.name %></p>
      <% end %>
    </div>
    <% end %>
    <%= paginate @works %>
  </div>
</div>