<div class="bg-transparent">
  <div class="d-flex justify-content-center">
    <h1 class="page_title">Sign up</h1>
  </div>
  <div class="container text-center">
    <%= form_with model: @user, url: user_registration_path do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
    
      <div class="row">
        <div class="col-12 pl-0">
          <%= f.label :name %>
        </div>
        <div class="col-lg-12 pl-0 pr-0">
          <%= f.text_field :name, class: "w-25" %>
        </div>
      </div>
    
      <div class="row">
        <div class="col-12 pl-0">
          <%= f.label :email %>
        </div>
        <div class="col-lg-12 pl-0 pr-0">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-25" %>
        </div>
      </div>
    
      <div class="row">
        <div class="col-12 pl-0">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(最小文字数 <%= @minimum_password_length %>)</em>
          <% end %>
        </div>
        <div class="col-lg-12 pl-0 pr-0">
          <%= f.password_field :password, autocomplete: "new-password", class: "w-25" %>
        </div>
      </div>
    
      <div class="row">
        <div class="col-12 pl-0">
          <%= f.label :password_confirmation %>
        </div>
        <div class="col-lg-12 pl-0 pr-0">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-25" %>
        </div>
      </div>
    
      <div class="row mt-4">
        <div class="col-lg-12 pl-0 pr-0">
          <%= f.submit "Sign up" %>
        </div>
      </div>
    <% end %>
    
    <%= render "devise/shared/links" %>
  </div>
</div>