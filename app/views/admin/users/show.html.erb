<h1>Users show</h1>
<div>
  <%= image_tag @user.get_profile_image(100, 100), class: "mt-3 rounded-circle"; %>
  <h4><%= @user.name %></h4>
  <h4><%= @user.introduction %></h4>
</div>
<div>
  <%= link_to "ユーザーの編集", edit_admin_user_path(@user) %>
  <%= link_to "ユーザーの削除", admin_user_path(@user), method: :delete, data: {confirm: "本当に削除しますか？"} %>
  <%= link_to "一覧に戻る", admin_users_path %>
</div>
