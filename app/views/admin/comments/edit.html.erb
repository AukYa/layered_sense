<div class="container">
  <div class="row">
    <%= form_with model:[@work, @comment], url: admin_work_comment_path, local: false do |f| %>
      <p><%= image_tag @comment.user.get_profile_image(50, 50), class: "mt-3 rounded-circle"; %><%= @comment.user.name %></p>
      <div class="col-8"><%= f.text_area :content, placeholder: "コメントを入力" %></div>
      <div class="col-2"><%= f.submit "変更保存" %></div>
    <% end %>
  </div>
</div>