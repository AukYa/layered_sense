<div class="d-flex justify-content-center">
  <h1 class="page_title">Comment Edit</h1>
</div>
<div class="container">
  <div class="row justify-content-center">
    <div class="w-75">
      <%= form_with model:[@work, @comment], url: admin_work_comment_path, local: false do |f| %>
      <div class="row">
        <div class="col-12 text-center">
          <p><%= image_tag @comment.user.get_profile_image(50, 50), class: "mt-3 rounded-circle"; %><%= @comment.user.name %></p>
        </div>
      </div>
        <div class="row mt-5">
          <div class="col-lg-3">
            <%= f.label :content %>
          </div>
          <div class="col-lg-8 offset-1 pl-0 pr-0">
            <%= f.text_area :content, placeholder: "コメントを入力", class: "w-100" %>
          </div>
        </div>
        <div class="row">
          <div class="offset-lg-6 col-lg-6 text-right mt-4 pr-0">
            <%= f.submit '変更を保存' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>