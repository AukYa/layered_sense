<!DOCTYPE html>
<html>
<head>
  <title>Admin - Layered Sense</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <script src="https://kit.fontawesome.com/08f6dce76e.js" crossorigin="anonymous"></script>
  <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <% if admin_signed_in? %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="true" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse ml-1" id="navbarNavDropdown">
          <a class="navbar-brand" href="/admin/users">
            <span>Layered Sense Admin</span>
          </a>
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <div class="dropdown nav-link">
                <div class="dropdown-toggle header_dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  Lists
                </div>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                  <%= link_to "Works", admin_works_path, class: 'nav-link text-dark' %>
                  <%= link_to "Users", admin_users_path, class: 'nav-link text-dark' %>
                  <%= link_to "Tags", admin_tags_path, class: 'nav-link text-dark' %>
                </div>
              </div>
            </li>
          </ul>
        </div>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
            <li>
              <%= link_to destroy_admin_session_path, method: :delete, class: 'nav-link text-light' do %>
                <i class="fa-solid fa-right-from-bracket"></i>Log out
              <% end %>
            </li>
          </ul>
        </div>
      <% end %>
    </div>
  </nav>
  <main>
    <% flash.each do |message_type, message| %>
      <div class="flash-message text-center w-25 <%= message_type %>"><%= message %></div>
    <% end %>
  </main>
  <%= yield %>
</body>
</html>