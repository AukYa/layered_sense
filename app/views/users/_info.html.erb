<div class="d-block">
  <%= image_tag @user.get_profile_image(90, 90), class: "mt-3 mb-3 rounded-circle border"; %>
  <h4><%= @user.name %></h4>
  <h4><%= @user.introduction %></h4>
  <% unless @user.guest_user? || @user != current_user %>
  <div>
    <div class="dropend">
      <div class="dropend-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <i class="fa-regular fa-address-card btn btn-outline-secondary btn-block "></i>
      </div>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <%= link_to "プロフィールの編集", edit_user_path(@user), class: "text-dark" %>
        <%= link_to "退会", user_withdraw_path(@user), method: :patch, "data-confirm" => "退会しますか？。", class: "text-dark" %>
      </div>
    </div>
  </div>
  <%= link_to "Bookmarks", work_favorites_path(@works) %>
  <% end %>
</div>