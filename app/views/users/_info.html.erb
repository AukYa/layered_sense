<div class="d-block">
  <div class="text-center">
    <h2>User info</h2>
    <%= image_tag @user.get_profile_image(90, 90), class: "mt-3 rounded-circle border"; %>
    <h4 class="mt-3 mb-3"><%= @user.name %></h4>
  </div>
  <div class="text__long introduction__hidden text-center">
    <%= @user.introduction %>
  </div>
  <% unless @user.guest_user? || @user != current_user %>
    <div class="dropend">
      <div class="dropend-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <i class="fa-regular fa-address-card btn btn-outline-secondary btn-block"></i>
      </div>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <%= link_to "プロフィールの編集", edit_user_path(@user), class: "text-dark nav-link" %>
        <%= link_to "ブックマークした作品", work_favorites_path(@works), class: "text-dark nav-link" %>
        <%= link_to "投稿したクエスチョン", question_my_questions_path(@my_questions), class: "text-dark nav-link" %>
        <%= link_to "退会", user_withdraw_path(@user), method: :patch, "data-confirm" => "退会しますか？", class: "text-dark nav-link" %>
      </div>
    </div>
  <% end %>
</div>