<h1>Users show</h1>
<div>
  <%= image_tag @user.get_profile_image(100, 100), class: "mt-3 rounded-circle"; %>
  <h4><%= @user.name %></h4>
</div>

<div class="container">
  <div class="row">
    <% @works.each do |work| %>
      <div class="col-lg-2">
        <%= link_to work_path(work.id) do %>
          <p>タイトル：<%= work.title %></p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<% unless @user.guest_user? || @user != current_user %>
  <div>
    <%= link_to "User Edit", edit_user_path(@user) %>
  </div>
<% end %>
