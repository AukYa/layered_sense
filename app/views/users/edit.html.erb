<div class="d-flex justify-content-center">
  <h1 class="page_title">Profile Edit</h1>
</div>
<div class="container">
  <div class="row justify-content-center">
    <div class="w-75">
      <%= form_with model: @user do |f| %>
        <div class="col-lg">
        　<label for="inputName">Name</label>
        　<%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %>
        <div class="col-lg">
          <label>Introduction</label>
          <%= f.text_area :introduction, class: "w-75" %>
        </div>
        <div class="col-lg">
          <label for="inputImage">ProfileImage</label>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
        </div>
        <div class="col-lg">
          <%= f.submit "変更を保存" %>
        </div>
      <% end %>
    </div>
  </div>
</div>