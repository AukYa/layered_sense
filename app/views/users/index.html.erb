<div class="d-flex justify-content-center">
  <h1 class="page_title">All Users</h1>
</div>
<div class="container">
  <div class="row">
    <% @users.each do |user| %>
      <div class="col-lg-2 pl-5 text-center" >
        <% unless user.guest_user? %>
          <%= link_to user_path(user.id), class: "text-dark" do %>
            <%= image_tag user.get_profile_image(100, 100), class: "rounded-circle border"; %>
            <h6><%= user.name %></h6>
          <% end %>
        <% end %>
      </div>
    <% end %>
  <%= paginate @users %>
  </div>
</div>