<%= render "info", group: @group %>
<hr />
<ul class="nav nav-tabs">
  <li class="nav-item">
    <button class="nav-link active" data-toggle="tab" data-target="#chat_page" type="button">Chat</button>
  </li>
  <li class="nav-item">
    <button class="nav-link" data-toggle="tab" data-target="#works_page" type="button">Works</button>
  </li>
</ul>
<div class="tab-content">
  <div class="tab-pane active" aria-current="page" id="chat_page">
    <%= render "chats/form" %>
    <%= render 'chats/index' %>
  </div>
  <div class="tab-content">
    <div class="tab-pane" id="works_page">
      <div class="container">
        <div class="row">
         <% @works.each do |work| %>
          <div class="text-center mb-5 col-lg-2">
            <%= link_to group.work_path(work.id), class: "text-dark" do %>
              <div class="card">
                <div class="card-body">
                  <i class="fa-solid fa-music fa-3x m-2"></i>
                  <h5 class="card-title text-truncate"><%= work.title %></h5>
                  <p class="card-text text-truncate"><%= work.introduction %></p>
                </div>
              </div>
            <% end %>
            <%= link_to group.work.user_path(work.user.id), class: "text-dark" do %>
              <div class="mt-3"><%= image_tag work.user.get_profile_image(50, 50), class: "rounded-circle border" %> <%= work.user.name %></div>
            <% end %>
          </div>
         <% end %>
        </div>
        <%= paginate @works %>
      </div>
    </div>
  </div>
</div>
