<%= render partial: 'layouts/error_messages', locals: { object: @group } %>
<div class="d-flex justify-content-center">
  <h1 class="page_title">Group Edit</h1>
</div>
<div class="container">
  <div class="row justify-content-center">
    <div class="w-75">
      <%= form_with model: @group do |f| %>
        <div class="row">
          <div class="col-lg-3">
            <%= f.label :group_image %>
          </div>
          <div class="col-lg-8 offset-1 pl-0 pr-0">
            <%= f.file_field :group_image, accept: "image/*" %>
          </div>
        </div>
        <div class="row mt-5">
          <div class="col-lg-3">
            <%= f.label :title %>
          </div>
          <div class="col-lg-8 offset-1 pl-0 pr-0">
            <%= f.text_field :title, placeholder: "タイトル（1~64字）", class: "w-100" %>
          </div>
        </div>
        <div class="row mt-5">
          <div class="col-lg-3">
            <%= f.label :introduction %>
          </div>
          <div class="col-lg-8 offset-1 pl-0 pr-0">
            <%= f.text_area :introduction, placeholder: "説明文（0~1000字）", rows:'4', class: "w-100" %>
          </div>
        </div>
        <div class="row">
          <div class="offset-lg-6 col-lg-6 text-right mt-4 pr-0">
            <%= f.submit 'Save Changes' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>