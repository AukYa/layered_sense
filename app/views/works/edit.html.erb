<%= render partial: 'layouts/error_messages', locals: { object: @work } %>
<div class="d-flex justify-content-center">
  <h1 class="page_title">Work Edit</h1>
</div>
<div class="container">
  <div class="row justify-content-center">
    <div class="w-75">
      <%= form_with model: @work do |f| %>
        <div class="row">
          <div class="col-12 mb-3">
            <p class="text-center"><%= audio_tag(polymorphic_path(@work.music_file), controls: true) %></p>
          </div>
          <div class="col-3">
            <%= f.label :music_file %>
          </div>
          <div class="col-8 offset-1 pl-0 pr-0">
            <%= f.file_field :music_file, accept: "audio/*" %>
          </div>
        </div>
        <div class="col-8 offset-4 mt-3 pl-0 pr-0">現在選択されているファイル： 「<%= @work.music_file.blob.filename.to_s %>」</div>
        <div class="row mt-5">
          <div class="col-3">
            <%= f.label :title %>
          </div>
          <div class="col-8 offset-1 pl-0 pr-0">
            <%= f.text_field :title, placeholder: "タイトル（1~64字", class: "w-100" %>
          </div>
        </div>
        <div class="row mt-5">
          <div class="col-3">
            <%= f.label :introduction %>
          </div>
          <div class="col-lg-8 offset-1 pl-0 pr-0">
            <%= f.text_area :introduction, placeholder: "説明文（0~1000字）", rows:'4', class: "w-100" %>
          </div>
        </div>
        <div class="row mt-5">
          <div class="col-3">
            <%= f.label :tag_name %>
          </div>
          <div class="col-8 offset-1 pl-0 pr-0">
            <%= f.text_field :tag_name, id:'tag_ids', :size=>"50", placeholder: "タグをつける。複数つけるには' , 'で区切ってください。", class: "w-100" %>
          </div>
        </div>
        <div class="row">
          <div class="offset-6 col-6 text-right mt-4 pr-0">
            <%= f.submit 'Save Changes' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>