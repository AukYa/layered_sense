<h1>作品編集</h1>
<%= form_with model: @work do |f| %>
  <h4>楽曲</h4>
  <p><%= audio_tag(polymorphic_path(@work.music_file), controls: true) %></p>
  <p><%= @work.music_file.blob.filename.to_s %></p>
  <%= f.file_field :music_file, accept: "audio/*" %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h4>説明文</h4>
  <%= f.text_area :introduction %>
  <%= f.submit '変更を保存' %>
  <% end %>
