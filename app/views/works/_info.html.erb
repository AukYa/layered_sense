<div class="text-center">
  <p><%= audio_tag(polymorphic_path(@work.music_file), controls: true) %></p>
</div>
<hr />
<p>Title</p>
<h3><%= @work.title %></h3>
<hr />
<%= link_to user_path(@work.user.id), class: "text-dark" do  %>
  <p><%= image_tag @work.user.get_profile_image(90, 90), class: "rounded-circle border" %> <%= @work.user.name %></p>
<% end %>
<p>Introduction</p>
<%= @work.introduction %> <br />
<p></p>
<hr />
<% @work.tags.each do |tag| %>
  <span class="border border-1 rounded-pill tag_view">#<%= link_to tag.tag_name, tag_path(tag), class: "text-dark" %></span>
<% end %>
<p></p>
<div class="row">
  <div class="col-10">
    <p class="sub_text m-0">投稿日：<%= @work.created_at.strftime('%Y/%m/%d') %></p>
  </div>
  <div class="col-2 favorite-<%= @work.id %>">
    <%= render 'favorites/btn', work: work %>
  </div>
</div>