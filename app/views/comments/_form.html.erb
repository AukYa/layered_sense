<div class="container">
  <div class="row">
    <%= form_with model:[@work, @comment], local: false, class: "d-flex w-100" do |f| %>
      <div class="col-2"><%= image_tag current_user.get_profile_image(50, 50), class: "rounded-circle border"; %></div>
      <div class="col-8"><%= f.text_area :content, rows:'4', placeholder: "コメントを入力", class: "w-100 comment-textarea" %></div>
      <div class="col-2 text-center"><%= f.submit "Post", class: "rounded-element w-100" %></div>
    <% end %>
  </div>
</div>