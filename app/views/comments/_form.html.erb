<div class="container">
  <div class="row">
    <%= form_with model:[@work, @comment], local: false do |f| %>
      <div class="col-2"><%= image_tag current_user.get_profile_image(50, 50), class: "mt-3 rounded-circle"; %></div>
      <div class="col-8"><%= f.text_area :content, placeholder: "コメントを入力" %></div>
      <div class="col-2"><%= f.submit "送信" %></div>
    <% end %>
  </div>
</div>