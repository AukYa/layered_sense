<% @comments.each do |comment| %>
 <%= link_to user_path(comment.user.id) do  %>
  <p><%= image_tag comment.user.get_profile_image(50, 50), class: "mt-3 rounded-circle"; %><%= comment.user.name %></p>
  <%= comment.content %>
  <% if comment.user == current_user %>
   <%= link_to "削除", comment_path(comment.work, comment), method: :delete, remote: true, "data-confirm" => "削除しますか？", class: 'btn btn-sm btn-danger destroy_book_id' %>
  <% end %>
 <% end %>
<% end %>