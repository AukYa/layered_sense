<div class="container">
 <% @comments.each do |comment| %> <br />
  <div class="row">
    <div class="col-lg-11">
     <% if comment.user.guest_user? %>
      <%= image_tag comment.user.get_profile_image(50, 50), class: "rounded-circle border" %><%= comment.user.name %>
     <% else %>
      <%= link_to user_path(comment.user.id), class: "text-dark" do %>
       <%= image_tag comment.user.get_profile_image(50, 50), class: "rounded-circle border" %><%= comment.user.name %>
      <% end %>
     <% end %>
    </div>
    <% if comment.user == current_user %>
     <div class="col-lg-1 mb-3">
      <div class="dropend">
        <div class="dropend-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <i class="fa-solid fa-ellipsis"></i>
        </div>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
          <%= link_to "コメントを削除", work_comment_path(comment.work, comment), method: :delete, "data-confirm" => "削除しますか？", class: 'text-dark', local: false %>
        </div>
      </div>
     </div>
    </div>
   <% end %>
   <div class="row">
    <div class="col-lg-12">
     <p class="sub_text"><%= comment.created_at.strftime('%Y/%m/%d') %></p>
    </div>
   </div>
   <div class="row">
    <div class="col-lg-12 mb-2">
     <div class="text__long"><%= comment.content %></div>
    </div>
   </div>
   <% end %>
 </div>
</div>


