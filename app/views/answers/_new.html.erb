<div class="container">
  <div class="row">
    <button type="button" class="btn btn-primary w-100" data-toggle="modal" data-target="#newAnswerModal">Answer Post</button>
  </div>
</div>

<div class="modal fade" id="newAnswerModal" tabindex="-1" role="dialog" aria-labelledby="newAnswerModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newAnswerModalLabel">Answer</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="閉じる">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render 'answers/form', answer: @answer %>
      </div>
    </div>
  </div>
</div>